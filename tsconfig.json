{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES2015",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "strict": false,
      "baseUrl": ".",
      "resolveJsonModule": true,
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "include": [
      "src/**/*",
      "index.ts",

  ],
  "exclude": [
      "node_modules",
  ]
}
